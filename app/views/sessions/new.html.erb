<div class="container">
  <% if @error %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">Login failed</h3>
    </div>
    <div class="panel-body">
      <%= @error %>
    </div>
  </div>
  <% end %>
  <legend>Login</legend>
  <%= render 'sessions/form' %>
</div>